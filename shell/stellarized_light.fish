# stellarized_light fish shell theme by nightsense (https://github.com/nightsense/stellarized)

# normal text
set fish_color_host              #454b62
set fish_color_normal            #454b62
set fish_pager_color_completion  #454b62
set fish_pager_color_description #454b62

# muted text
set fish_color_autosuggestion    #666c85
set fish_color_comment           #666c85

# reverse muted
set fish_pager_color_progress    #fceee0 --background=#666c85

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#c5b3a3
set fish_color_search_match      --background=#c5b3a3
set fish_color_selection         --background=#c5b3a3

# red errors/warnings
set fish_color_cancel            #d02a48
set fish_color_cwd_root          #d02a48
set fish_color_error             #d02a48

# gold special elements
set fish_color_redirection       #8d6700
set fish_color_escape            #8d6700
set fish_color_operator          #8d6700
set fish_color_end               #8d6700

# green commands/status
set fish_color_command           #008016
set fish_color_cwd               #008016
set fish_color_user              #008016

# cyan parameters
set fish_color_param             #00798b

# blue quoted strings
set fish_color_quote             #006bd6

# magenta pager name match
set fish_pager_color_prefix      #a940b6

