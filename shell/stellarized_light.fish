# stellarized_light fish shell theme by nightsense (https://github.com/nightsense/stellarized)

# normal text
set fish_color_host              #575c71
set fish_color_normal            #575c71
set fish_pager_color_completion  #575c71
set fish_pager_color_description #575c71

# muted text
set fish_color_autosuggestion    #7b8197
set fish_color_comment           #7b8197

# reverse muted
set fish_pager_color_progress    #fdf2e9 --background=#7b8197

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#bca997
set fish_color_search_match      --background=#bca997
set fish_color_selection         --background=#bca997

# red errors/warnings
set fish_color_cancel            #c93c4e
set fish_color_cwd_root          #c93c4e
set fish_color_error             #c93c4e

# gold special elements
set fish_color_redirection       #8e6a00
set fish_color_escape            #8e6a00
set fish_color_operator          #8e6a00
set fish_color_end               #8e6a00

# green commands/status
set fish_color_command           #008228
set fish_color_cwd               #008228
set fish_color_user              #008228

# cyan parameters
set fish_color_param             #007b8b

# blue quoted strings
set fish_color_quote             #0070cf

# magenta pager name match
set fish_pager_color_prefix      #a64ab0

